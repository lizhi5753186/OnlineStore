
@model IEnumerable<OnlineStore.Web.ProductService.ProductDto>

<table width="774" border="0" cellspacing="0" cellpadding="0">
    <tr>
        <td height="40" class="popular">
            <img src="/images/spacer.jpg" alt="" width="27" height="19"><span class="popular_text">新书推荐</span>
        </td>
    </tr>
    <tr>
        <td height="171" valign="top" class="popular_center">
            <table width="774" border="0" cellpadding="0" cellspacing="0">
                <tr>
                    <td width="15">&nbsp;</td>
                    <td width="743">
                        <table width="100%" border="0" cellspacing="0" cellpadding="0">
                            <tr>
                                @for (int i = 0; i < Model.Count(); i++)
                                {
                                    var model = Model.ToList()[i];
                                    <td width="21%" height="148" align="center">
                                        <a href="@Url.Action("ProductDetail", "Home", new { id = model.Id})">
                                            <img src="@string.Format(Url.Content("~/Images/Products/{0}"), model.ImageUrl)" alt="" width="159" height="160" border="0">
                                        </a>
                                        <br>
                                        <span class="style7"><a href="@Url.Action("ProductDetail", "Home", new { id = model.Id})">@Html.Encode(model.Name)</a></span></td>
                                    if (i != Model.Count() - 1)
                                    {
                                    <td width="2%" align="center">
                                        <img src="/images/op.jpg" width="14" height="160">
                                    </td>
                                    }
                                }
                            </tr>
                        </table>
                    </td>
                    <td width="16">&nbsp;</td>
                </tr>
            </table>
        </td>
    </tr>
    
    <tr>
        <td valign="top">
            <img src="/images/close.jpg" alt="" width="774" height="15">
        </td>  
    </tr>
</table>
